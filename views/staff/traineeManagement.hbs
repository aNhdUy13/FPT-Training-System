<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainee Management</title>
    <link rel="stylesheet" href="css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="css/staff.css" type="text/css">

</head>

<body>
</body>
<div class="container ">

    {{> header}}

    <!-- Content -->
    <div class="main_Content">

        <div class="topTraineeLayout">
            <div class="tableAddTrainee">
                <h4>Add Trainee Account</h4>

                <table>
                    <form  action="/doAddTraineeAccount" method="post">
                        <tr>
                            <td>Name : </td>
                            <td><input type="text" name="txtTraineeName"> </td> 
                            <td style="color: brown;">{{errorMessage}}</td>
                        </tr>
                        <tr>
                            <td>Email : </td>
                            <td><input type="text" name="txtTraineeEmail"> </td> 
                            <td style="color: brown;">{{errorMessage}}</td>
                        </tr>

                        <tr>
                            <td>Password : </td>
                            <td><input type="text" name="txtTraineePassword"> </td> 
                            <td style="color: brown;">{{errorMessage}}</td>
                        </tr>

                        <tr>
                            <td>Age : </td>
                            <td><input type="text" name="txtTraineeAge"></td>
                            <td  style="color: brown;">{{errorPrice}}</td>

                        </tr>

                        <tr>
                            <td>Date of Birth : </td>
                            <td><input type="text" name="txtTraineeDoB"></td>
                            <td  style="color: brown;">{{errorPrice}}</td>

                        </tr>
                        
                        <tr>
                            <td>Education : </td>
                            <td><input type="text" name="txtTraineeEducation"></td>
                            <td  style="color: brown;">{{errorPrice}}</td>

                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="submit" value="Insert" class="insertButton"></td>

                        </tr>
                    </form>
                </table>
            </div>
        </div>

        <div class="bottomTraineeLayout">
            <form method="POST" action="/searchTraineeAccount">
                <input class="traineeSearchBar" type="text" name="txtTraineeNameAgeSearch" style="width: 350px;">
                <input type="submit" value="Search">          
            </form>

             <table border="1" cellspacing ="0 " cellpadding="15">
                <thead>
                    <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Date of Birth</th>
                            <th>Education</th>
                            <th>Delete</th>
                            <th>Update</th>

                    </tr>
                </thead>
                    <tbody>
                        {{#each viewAllTraineeAccount}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{email}}</td>
                                <td>{{age}}</td>
                                <td>{{DoB}}</td>
                                <td>{{education}}</td>

                                <td>
                                    <button>
                                        <a href="/deleteTraineeAccount?id={{_id}}" onclick="return confirm('Are You Sure to Delete ?')">
                                                Delete
                                        </a>
                                    </button>
                                </td>
                                <td>
                                        <button>
                                            <a href="/updateTraineeAccount?id={{_id}}">
                                                Update
                                            </a>
                                    </button>
                                </td>
                            
                            </tr>
                        {{/each }}

            </tbody>
           </table>
        </div>
    </div>

    <!-- (End) Content -->

    {{> footer}}

</div>


</html>