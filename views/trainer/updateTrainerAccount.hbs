<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainee Management</title>
    <link rel="stylesheet" href="/css/normal_layout.css" type="text/css">
    <link rel="stylesheet" href="/css/staff.css" type="text/css">

</head>

<body>
</body>
<div class="container ">

    {{> trainerheader}}

    <!-- Content -->
    <div class="main_Content">
        <div>.</div>
        <div class="updateTraineeAccount">
                <h4>Update Trainer Account</h4>

                <table>
                    <form action="../trainer/doUpdateTrainerAccount" method="post">
                    <td><input type="hidden" name="id" value="{{trainerDetail._id}}"></td>

                     <tr>
                        <td>Name : </td>
                        <td><input type="text" name="txtUpdateTrainerName" value="{{trainerDetail.name}}"> </td> 
                        <td style="color: brown;">{{errorMessage}}</td>
                    </tr>
                    <tr>
                        <td>Email : </td>
                        <td><input type="text" name="txtUpdateTrainerEmail" value="{{trainerDetail.email}}"> </td> 
                        <td style="color: brown;">{{errorMessage}}</td>
                    </tr>

            

                    <tr>
                        <td>Age : </td>
                        <td><input type="text" name="txtUpdateTrainerAge" value="{{trainerDetail.age}}"></td>
                        <td  style="color: brown;">{{errorPrice}}</td>

                    </tr>

                     <tr>
                        <td>Date of Birth : </td>
                        <td><input type="text" name="txtUpdateTrainerDoB" value="{{trainerDetail.DoB}}"></td>
                        <td  style="color: brown;">{{errorPrice}}</td>

                    </tr>
                    
                     <tr>
                        <td>Education : </td>
                        <td><input type="text" name="txtUpdateTrainerEducation" value="{{trainerDetail.education}}"></td>
                        <td  style="color: brown;">{{errorPrice}}</td>

                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Update" class="updateButton"></td>
                    </tr>
                </form>
                </table>

        </div>

    </div>
    <!-- (End) Content -->  

    {{> footer}}

</div>


</html>